{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./out-tsc",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",    
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "lib": [
      "es2018",
      "dom"
    ],
    "plugins": [
      {
        "name": "typescript-lit-html-plugin"
      }
    ],
  },
  "include": ["node_modules/@open-wc/**/*.js", "src/**/*.ts", "rollup.config.js"],
  "exclude": ["node_modules/!(@open-wc)"]
}