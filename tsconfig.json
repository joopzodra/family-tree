{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es2018",
      "dom"
    ],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "./out-tsc/src",
    "plugins": [
      {
        "name": "typescript-lit-html-plugin"
      }
    ],
    "sourceMap": true
  },
  "include": [
    "node_modules/@open-wc/**/*.js",
    "src/**/*.ts",
    "rollup.config.js"
  ],
  "exclude": [
    "node_modules/!(@open-wc)"
  ]
}